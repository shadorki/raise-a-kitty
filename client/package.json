  "main": "index.js",
  "scripts": {
    "start": "yarn clean && node -r dotenv/config && yarn watch:all",
    "build": "yarn clean && node -r dotenv/config && && yarn build:all",
    "build:all": "yarn build:background & yarn build:content",
    "build:content": "parcel build src/content/* -o content.js",
    "build:background": "parcel build src/background/* -o background.js",
    "watch:all": "yarn watch:background & yarn watch:content",
    "watch:content": "parcel watch src/content/* -o content.js",
    "watch:background": "parcel watch src/background/* -o background.js",
    "clean": "rm -rf dist"
  },
