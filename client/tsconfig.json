{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "/*": [
        "src/*"
      ]
    },
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react",
    "noImplicitAny": true,
    "lib": [
      "es6",
      "dom"
    ],
  },
  "include": [
    "src/**/*"
  ],
}
